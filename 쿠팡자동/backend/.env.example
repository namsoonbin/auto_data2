# Database Configuration
# SQLite (현재 사용 중 - 개발용)
DATABASE_URL=sqlite:///./coupang_integrated.db

# PostgreSQL (프로덕션용 - 멀티 테넌시)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# 예시: postgresql://postgres:mypassword@localhost:5432/coupang_db
# Supabase 예시: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Application Settings
ENVIRONMENT=development  # development, production
DEBUG=True

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_LOGIN_PER_MINUTE=5
RATELIMIT_API_PER_MINUTE=100

# Optional: S3 Backup Configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=your-backup-bucket
# S3_REGION=ap-northeast-2
